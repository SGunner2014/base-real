ENTRY(loader) /* Name of the entry label */

SECTIONS {
    . = 0x00100000; /* Code should be loaded at 1MB */

    .text ALIGN (0x1000) : /* align at 4kb */
    {
        *(.text)
    }

    .rodata ALIGN (0x1000) :
    {
        *(.rodata*)
    }

    .data ALIGN (0x1000) :
    {
        *(.data)
    }

    .bss ALIGN (0x1000) :
    {
        *(COMMON)
        *(.bss)
    }
}